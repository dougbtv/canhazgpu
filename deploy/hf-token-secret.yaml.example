# Example Hugging Face Token Secret
#
# To use this:
# 1. Copy this file to hf-token-secret.yaml
# 2. Replace YOUR_HF_TOKEN_HERE with your actual Hugging Face token
# 3. Apply with: kubectl apply -f hf-token-secret.yaml
#
# Alternative: Create directly with kubectl:
# kubectl create secret generic hf-token --from-literal=token=YOUR_HF_TOKEN_HERE -n canhazgpu-system

apiVersion: v1
kind: Secret
metadata:
  name: hf-token
  namespace: canhazgpu-system
type: Opaque
data:
  # Base64 encoded Hugging Face token
  # Replace YOUR_HF_TOKEN_HERE with your actual token, then base64 encode it:
  # echo -n "YOUR_HF_TOKEN_HERE" | base64
  token: WU9VUl9IRl9UT0tFTl9IRVJF  # This is "YOUR_HF_TOKEN_HERE" base64 encoded